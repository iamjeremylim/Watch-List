<div class="banner" style="background-color: black;">
  <div class="container">
    <h1 class="text-center">Save any kind of movies</h1>
  </div>
</div>



<div class="cards-container">
  <h2 class="text-center">My List</h2>
  <div class="cards">
    <% @lists.each do |list| %>
      <div class="card col-3" style="background-color: white">
        <%= link_to list.name, list_path(list) %>
      </div>
    <% end %>
  </div>
  <%= link_to "Add To List", new_list_path, class: "btn btn-ghost" %>
</div>
