<div class="cards-container">
  <h2 class="text-center"><%= @list.name %></h2>
  <div class="cards">
    <% @list.movies.each do |movie| %>
      <div class="movie">
        <img alt=<%= movie.title %> width="200" src=<%= movie.poster_url %> />
        <p><%= movie.title %></p>
        <% bookmark = List.find(params[:id]) %>
        <%= link_to "Remove", bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure?" } %>
      </div>
    <% end %>
  </div>
</div>

<%= link_to "New Bookmark Form", new_list_bookmark_path(@list), class: "btn btn-ghost" %>
<%= link_to "Back to list", lists_path, class: "btn btn-ghost" %>
